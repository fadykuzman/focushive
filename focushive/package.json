{
  "name": "belugafocus",
  "version": "0.1.0",
  "description": "Navigate your productivity with intelligent focus sessions and deep work management",
  "keywords": ["productivity", "focus", "time-management", "deep-work", "task-management", "workflow"],
  "author": "BelugaFocus Team",
  "homepage": "https://belugafocus.com",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "node scripts/build-with-logging.js",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:report": "vitest run --reporter=html --reporter=junit --reporter=json --outputFile.html=public/reports/index.html --outputFile.junit=reports/junit.xml --outputFile.json=reports/results.json",
    "semantic-release": "semantic-release",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "15.5.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "semantic-release": "^24.2.7",
    "tailwindcss": "^4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "pnpm test:run --passWithNoTests"
    ]
  }
}
